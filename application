  <script type="text/javascript">
    'use strict';
    $(document).ready(function() {
        var gmt = new GMT();
        gmt.onStart();
        validateFileUploads("256kb",
                [
                    'image/png', 'image/jpg',
                    'image/jpeg', 'image/gif','application/pdf',
                    'application/msword',
                    'application/vnd.openxmlformats-officedocument.wordprocessingml.document'
                ],
                'certificate');
        validateFileUploads("256kb",[ 'application/pdf','application/vnd.openxmlformats-officedocument.wordprocessingml.document',//for docx
            'application/msword'],'vitae');
        var date = new Date();
        var vd = new ValidateDateInput().validateDate('dob').minAndMax(null, date);
        vd.validateDate('dob').minAndMax(null, new Date(date.getFullYear()-18 ,12,1));




     function getNyscStatus() {
            var nyscStatus = document.getElementById("service_status");
            nyscStatus.addEventListener("change", function(){
                toggleDisplay();
            });

        }getNyscStatus();

        function toggleDisplay() {
            var nyscStatus = document.getElementById("service_status");
            var completedNysc = document.getElementById("nysc");
            var selectedVal = nyscStatus.options[nyscStatus.selectedIndex].value;
            var certNum = document.getElementsByName("discharge_number").item(0);
            if(selectedVal==="Completed"){
                console.log("selected val" + selectedVal);
                completedNysc.style.visibility = "visible";
                certNum.disabled = false;
                completedNysc.style.display = "block";
            }
            else if(selectedVal==="Exempted"){
                completedNysc.style.visibility = "visible";
                certNum.disabled = false;
                completedNysc.style.display = "block";
            }
            else{
                completedNysc.style.visibility = "hidden";
                certNum.disabled = false;
                completedNysc.style.display = "none";
            }
        }


 $(document).ready(function(){

        $( "#gmtForm" ).validate({
            rules: {
                first_name: {
                    required: true,
                    letterswithbasicpunc: true,
                    minlength: 2
                },
